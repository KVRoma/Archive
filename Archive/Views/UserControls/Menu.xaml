<UserControl x:Class="Archive.Views.UserControls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Archive.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300">
    <Menu>
        <MenuItem Header="Робота">
            <MenuItem Header="Друк наклейок"/>
            
            <Separator Margin="0,20,0,0"/>
            <MenuItem Header="Вихід" Foreground="Red" Command="{Binding ExitApp}"/>
        </MenuItem>
        <MenuItem Header="Довідники">
            <MenuItem Header="Населені пункти" Command="{Binding CityDic}"/>            
            <MenuItem Header="Назва справи" Command="{Binding BookDic}"/>
            <MenuItem Header="Назва документу" Command="{Binding DocumentDic}"/>
        </MenuItem>
    </Menu>
</UserControl>
